<%= form_tag '/accrual_year' do %>
  <%= text_field_tag "Year to Accrue", Time.new.year %>
  <%= submit_tag "Update Year", class: "btn btn-default" %>
<% end %>

<table class="table">
  <th>Date</th>
  <th>Invoice Number</th>
  <th>Customer Name</th>
  <th>Maintenance Start</th>
  <th>Maintenance End</th>
  <th>Amount Paid</th>
  <th>Jan</th>
  <th>Feb</th>
  <th>Mar</th>
  <th>Apr</th>
  <th>May</th>
  <th>Jun</th>
  <th>Jul</th>
  <th>Aug</th>
  <th>Sep</th>
  <th>Oct</th>
  <th>Nov</th>
  <th>Dec</th>



  <% @entries.each do | entry | %>
    <tr>
      <td><%= entry.date %></td>
      <td><%= entry.invoice_number %></td>
      <td><%= entry.customer_name %></td>
      <td><%= entry.maint_start %></td>
      <td><%= entry.maint_end %></td>
      <td><%= entry.amount_paid %></td>

    </tr>
  <% end %>
</table>

<p><%= link_to "Download CSV", entries_url(format: "csv"), class: "btn btn-info"%></p>

<h2>Import Entries</h2>

<%= form_tag import_entries_url, multipart: true do %>
  <table>
    <tr>
      <td><%= file_field_tag :file, class: "btn btn-default" %></td>
      <td><%= submit_tag "Import", class: "btn btn-info" %></td>
    </tr>
  </table>
<% end %>

<br />

<h2>Clear Data</h2>
<%= button_to "Clear it all?", clear_entries_url, method: :delete, class: "btn btn-danger btn-lg" %>